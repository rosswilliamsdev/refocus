{
  "manifest_version": 3,
  "name": "reFocus",
  "version": "1.0",
  "description": "Regain control of your attention with mindful browsing timers",
  "permissions": ["activeTab", "storage", "alarms", "tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "reFocus"
  },
  "icons": {
    "16": "icons/bullseye16px.png",
    "32": "icons/bullseye32px.png",
    "48": "icons/bullseye48px.png",
    "128": "icons/bullseye128px.png"
  }
}
