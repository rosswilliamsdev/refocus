{
  "manifest_version": 3,
  "name": "reFocus",
  "version": "1.0",
  "description": "Regain control of your attention with mindful browsing timers",
  "permissions": ["activeTab", "storage", "alarms", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "reFocus"
  }
}
